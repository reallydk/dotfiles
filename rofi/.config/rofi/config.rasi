configuration {
  font: "JetBrainsMono Nerd Font 18, Noto Color Emoji 18";
	show-icons: true;
	terminal: "ghostty";
  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
    directories-first: true;
    show-hidden: true;
    sorting-method:    "name";
  }

}

@theme "~/.config/rofi/themes/custom.rasi"
